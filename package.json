{
  "name": "wedding",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "build-storybook": "build-storybook -s public",
    "chromatic": "npx chromatic",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "storybook": "start-storybook -p 6006 -s public",
    "test": "react-scripts test"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^0.2.19",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.0",
    "@testing-library/user-event": "^12.1.5",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.2",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.3",
    "aws-amplify": "^3.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "styled-components": "^5.1.1",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-a11y": "^6.0.21",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/addon-storysource": "^6.0.20",
    "@storybook/node-logger": "^6.0.21",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.21",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.1.0",
    "prettier": "^2.1.1",
    "prettier-plugin-package": "^1.0.0",
    "react-is": "^16.13.1",
    "stylelint": "^13.6.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-media-use-custom-media": "^2.0.0",
    "stylelint-use-logical": "^1.1.0",
    "stylelint-use-nesting": "^3.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": "prettier --write",
    "*.{tf}": [
      "terraform fmt -recursive",
      "terraform validate"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,md,mdx}": "prettier --write",
    "src/**/*.{js,jsx,ts,tsx}": "stylelint --fix"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order",
      "stylelint-config-recommended"
    ],
    "plugins": [
      "stylelint-media-use-custom-media",
      "stylelint-use-nesting",
      "stylelint-use-logical"
    ],
    "rules": {
      "csstools/media-use-custom-media": "always",
      "csstools/use-logical": "always",
      "csstools/use-nesting": "always"
    }
  }
}
